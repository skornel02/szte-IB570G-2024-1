@model hazi3.Entities.PetEntity

@{
    ViewData["Title"] = "Create pet";
}

<h1>Create Pet</h1>

<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" placeholder="Name" />
                    <label asp-for="Name">Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Gender" class="form-control" placeholder="Gender" />
                    <label asp-for="Gender">Gender</label>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Age" class="form-control" type="number" placeholder="Age" />
                    <label asp-for="Age">Age</label>
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Weight" class="form-control" type="number" step="0.1" placeholder="Weight" />
                    <label asp-for="Weight">Weight</label>
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="PhotoUrl" class="form-control" placeholder="Photo URL" />
                    <label asp-for="PhotoUrl">Photo URL</label>
                    <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    @Html.DropDownListFor(_ => _.CategoryId, new SelectList(ViewBag.Categories, "Id", "Name"), "Válassz kategóriát!", new { @class = "form-select" })
                    <label asp-for="CategoryId">Category</label>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="d-grid">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
