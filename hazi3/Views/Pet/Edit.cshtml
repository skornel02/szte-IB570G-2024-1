@model hazi3.Entities.PetEntity

@{
    ViewData["Title"] = "Edit pet";
}

<div class="container mt-5">
    <h1 class="mb-4">Edit pet</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" placeholder="Name" />
                    <label asp-for="Name">Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Gender" class="form-control" placeholder="Gender" />
                    <label asp-for="Gender">Gender</label>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Age" class="form-control" type="number" placeholder="Age" />
                    <label asp-for="Age">Age</label>
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Weight" class="form-control" type="number" step="0.1" placeholder="Weight" />
                    <label asp-for="Weight">Weight</label>
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
                
                <div class="form-floating mb-3">
                    <input asp-for="PhotoUrl" class="form-control" placeholder="Photo URL" />
                    <label asp-for="PhotoUrl">Photo URL</label>
                    <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                    <p>
                        <span class="text-secondary">
                            Egy webcímről nem tudjuk eldönteni, hogy ténylegesen kép-e vagy sem, ezért egy valós URL-t elfogadunk.
                            <span class="fst-italic">(pl: <a href="https://http.cat/404">http.cat/404</a>)</span>
                        </span>
                    </p>
                </div>
                
                <div class="form-floating mb-3">
                    @Html.DropDownListFor(_ => _.CategoryId, new SelectList(ViewBag.Categories, "Id", "Name"), "Válassz kategóriát!", new { @class = "form-select" })
                    <label asp-for="CategoryId">Category</label>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                
                <div class="d-grid">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
