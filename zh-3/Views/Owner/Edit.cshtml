@using hazi3.Enums
@model hazi3.Entities.OwnerEntity

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit owner</h1>

<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" placeholder="bela" />
                    <label asp-for="Name" class="control-label"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="PhoneNumber" class="form-control" placeholder="telefonszam" />
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    @Html.DropDownListFor(_ => _.HomeType, Html.GetEnumSelectList<HomeType>(), null, new
                        {
                            @class = "form-control"
                        })
                    <label asp-for="HomeType" class="control-label"></label>
                    <span asp-validation-for="HomeType" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="ExperiencedKeeper" /> @Html.DisplayNameFor(model => model.ExperiencedKeeper)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
